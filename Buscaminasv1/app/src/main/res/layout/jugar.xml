<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/pasillo_neon"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="200px"
        android:layout_marginRight="100px"
        android:fontFamily="@font/neonoverdrive"
        android:text="Jugar"
        android:textAlignment="center"
        android:textColor="#F5E6E8"
        android:textSize="80sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"
            android:layout_marginRight="100px"
            android:fontFamily="@font/neonoverdrive"
            android:text="Elige tu dificultad"
            android:textAlignment="center"
            android:textColor="#F5E6E8"
            android:textSize="25sp" />
        <Button
            android:id="@+id/principiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="100px"
            android:layout_marginRight="100px"
            android:background="@drawable/boton_verde"
            android:fontFamily="@font/neonavy"
            android:text="Principiante" />

        <Button
            android:id="@+id/medio"
            android:layout_marginTop="100px"
            android:layout_marginRight="100px"
            android:layout_marginLeft="100px"
            android:background="@drawable/boton_naranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neonavy"
            android:text="Medio" />
        <Button
            android:id="@+id/experto"
            android:layout_marginTop="100px"
            android:layout_marginRight="100px"
            android:layout_marginLeft="100px"
            android:background="@drawable/boton_rojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neonavy"
            android:text="Experto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="100px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/volver"
                android:layout_margin="50px"
                android:textColor="#ffffff"
                android:background="@drawable/boton_rosa"
                android:fontFamily="@font/neonavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volver" />

            <Button
                android:id="@+id/salir"
                android:layout_margin="50px"
                android:textColor="#ffffff"
                android:background="@drawable/boton_rosa"
                android:fontFamily="@font/neonavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salir" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>